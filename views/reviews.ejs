<%- include('partials/header') -%>
<div class="container mt-3">
  <p class="fs-3 mx-auto text-center">My Reviews</p>
  
  <form action="/remover" method="POST">
    <select class="form-select form-select-lg mb-3 fs-3" aria-label=".form-select-lg example" name="name">
      <% for(var i=0; i<reviews.length; i++) {%>
        <option class="" value="<%= reviews[i].productName %>" name="name" ><%= reviews[i].productName %> - <%= reviews[i].key %></option>
      <% } %>
    </select>
    <button type="submit" class="btn viewKey w-100 fs-2 mt-1">Delete Review</button>
  </form>
</div>

  <hr class="w-75 mx-auto mt-4">

<div class="w-100 newCards">
  <% for(var i=0; i<reviews.length; i++) {%>
    <div class="nft">
      <div class='main'>
        <h2 class="fs-3 text-center ">
          <%= reviews[i].productName %> 
        </h2>
        <img class='tokenImage fs-4 mt-2' src="<%= reviews[i].image%>" alt="NFT">
        <p class='description fs-4 mt-3'><span class="fw-bold">
            <%= reviews[i].user %>:
          </span>
          <%= reviews[i].productReview %> - <%= reviews[i].rating %>
        </p>
        <hr />
        <div class='tokenInfo'>
          <div class="price fs-4">
            <p>Key: <%= reviews[i].key %>
                <ins>
                  <i class="fa-regular fa-key" id="keyKey"></i>
                </ins>
            </p>
          </div>
          <div class="duration fs-4">
            <p><span class="fw-bold">Size:</span>
              <%= reviews[i].productSize %>
            </p>
          </div>
        </div>
        <hr /> 
        <p class="fs-7 mt-2"><%= reviews[i].createdAt %></p>

      </div>
    </div>  
    <% } %>
</div>
</div>
<%- include('partials/footer') -%>